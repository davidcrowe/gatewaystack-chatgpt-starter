# ============================
# Tool execution backend
# ============================

# For local dev (same process):
FUNCTIONS_BASE=http://localhost:3000/demo

# For Cloud Run:
# FUNCTIONS_BASE=https://YOUR_CLOUD_RUN_URL/demo

# OAuth / Auth0
OAUTH_ISSUER=https://YOUR_TENANT.us.auth0.com
OAUTH_AUDIENCE=https://YOUR_API_IDENTIFIER
OAUTH_SCOPES="openid email profile starter.echo starter.whoami starter.notes"

# Server
PORT=3000
NODE_ENV=dev
SERVICE_NAME=gatewaystack-chatgpt-starter
APP_ORIGIN=*

# Analytics-safe user counting (hash sub in logs)
USER_HASH_SALT=change-me

# crm database setup
PII_SALT=replace-with-a-long-random-string
CRM_DB_PATH=./data/crm.sqlite

# Optional overrides
# JWKS_URI=https://YOUR_TENANT.us.auth0.com/.well-known/jwks.json
# OIDC_DISCOVERY=https://YOUR_TENANT.us.auth0.com/.well-known/openid-configuration
